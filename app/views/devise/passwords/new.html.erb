<main class="container">
      <div class="container-one">
        <h2>Forgot your password?</h2>
        <p>
          An email comfirmatiion will be send. Don't forget to check your spam folder
        </p>
      </div>
      <div class="container-two">
        <div class="container-blue">
          <p><span>Enter your details</span></p>
        </div>
    
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "main-form" }) do |f| %>
          <label class="btn-term" for="submit-info">
              <%= render "devise/shared/error_messages", resource: resource %>
          </label>

          <div class="input-form">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'user-email', id: 'user-email', placeholder: 'Email Address', required: true %>
          </div>

          <div class="input-form">
            <%= f.submit "Send me reset password instructions", class: 'submit-info', id: 'submit-info' %>
          </div>

          <label class="btn-term" for="submit-info">
            <%= render "devise/shared/links" %>
          </label>
        <% end %>
      </div>
    </main>