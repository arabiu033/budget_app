<main class="container">
      <div class="container-one">
        <h2>Sign up</h2>
        <p>
          Let's get you ready to use the app. If you were unable to find the
          confirmation email, remember to check your spam folder.
        </p>
      </div>
      <div class="container-two">
        <div class="container-blue">
          <p><span>Enter your details</span></p>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "main-form"}) do |f| %>
          <div class="input-form">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'first-name', id: 'first-name', placeholder: 'First Name', required: true %>
          </div>

          <div class="input-form">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'user-email', id: 'user-email', placeholder: 'Email Address', required: true %>
          </div>

          <div class="input-form">
            <%= f.password_field :password, autocomplete: "new-password", class: 'user-pass', id: 'user-pass', placeholder: 'Password', required: true %>
          </div>

          <div class="input-form">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'user-pass', id: 'user-pass', placeholder: "Comfirm Password", required: true %>
          </div>

          <div class="input-form">
            <%= f.submit "Sign up", class: 'submit-info', id: 'submit-info' %>
          </div>

          <label class="btn-term" for="submit-info">
            <%= render "devise/shared/links" %>
          </label>
        <% end %>
      </div>
    </main>
