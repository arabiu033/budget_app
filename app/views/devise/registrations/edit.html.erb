<main class="container">
      <div class="container-one">
        <h2>Edit <%= resource_name.to_s.humanize %></h2>
        <p>
          To confirm that the changes were made by the user, an email confirmation is needed after editing particular fields.
        </p>
      </div>
      <div class="container-two">
        <div class="container-blue">
          <p><span>Enter your details</span></p>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "main-form" }) do |f| %>      
          <label class="btn-term" for="submit-info">
              <%= render "devise/shared/error_messages", resource: resource %>
          </label>

          <div class="input-form">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'user-email', id: 'user-email', placeholder: 'Email Address', required: true %>
          </div>

          <div class="input-form">
            <%= f.password_field :password, autocomplete: "new-password", class: 'user-pass', id: 'user-pass', placeholder: 'Password', required: true %>
          </div>

          <div class="input-form">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'user-pass', id: 'user-pass', placeholder: "Comfirm Password", required: true %>
          </div>

          <div class="input-form">
            <%= f.password_field :current_password, autocomplete: "new-password", class: 'user-pass', id: 'user-pass', placeholder: "Old Password", required: true %>
          </div>

          <div class="input-form">
            <%= f.submit "Update", class: 'submit-info', id: 'submit-info' %>
          </div>

          <label class="btn-term" for="submit-info">
            <h3>Cancel my account</h3>
            <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
            <%= link_to "Back", root_path %>
          </label>
        <% end %>
      </div>
    </main>
